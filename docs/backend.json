
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Authentication."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "storeName": {
          "type": "string",
          "description": "The display name or store name for the user."
        },
        "storeDescription": {
            "type": "string",
            "description": "A short description of the user's store."
        },
        "profilePictureUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL for the user's profile picture."
        },
        "bannerUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL for the user's store banner image."
        },
        "whatsappNumber": {
            "type": "string",
            "description": "The user's WhatsApp contact number."
        },
        "department": {
            "type": "string",
            "description": "The department/state where the store is located."
        },
        "city": {
            "type": "string",
            "description": "The city/sub-location where the store is located."
        }
      },
      "required": ["uid", "email", "storeName"]
    },
    "Product": {
        "title": "Product",
        "description": "Represents an item available for sale or auction.",
        "type": "object",
        "properties": {
            "id": { "type": "string" },
            "name": { "type": "string" },
            "description": { "type": "string" },
            "price": { "type": "number" },
            "category": { "type": "string" },
            "condition": { "type": "string", "enum": ["Nuevo", "Usado - Como nuevo", "Usado - Buen estado", "Usado - Aceptable"] },
            "imageUrls": { "type": "array", "items": { "type": "string", "format": "uri" } },
            "sellerId": { "type": "string" },
            "isAuction": { "type": "boolean" },
            "auctionEndDate": { "type": "string", "format": "date-time" },
            "status": { "type": "string", "enum": ["Activo", "Vendido", "Pendiente"] },
            "wholesalePricing": {
                "type": "array",
                "description": "Tiers for wholesale pricing.",
                "items": {
                    "type": "object",
                    "properties": {
                        "minQuantity": { "type": "number" },
                        "price": { "type": "number" }
                    },
                    "required": ["minQuantity", "price"]
                }
            }
        },
        "required": ["id", "name", "price", "sellerId", "imageUrls", "condition"]
    },
    "Order": {
      "title": "Order",
      "description": "Represents a customer's order.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "totalAmount": { "type": "number" },
        "status": { "type": "string", "enum": ["Pendiente", "Procesado", "Enviado", "Entregado", "Cancelado"] },
        "shippingAddress": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "phone": { "type": "string" },
            "address": { "type": "string" },
            "city": { "type": "string" },
            "postalCode": { "type": "string" },
            "notes": { "type": "string" }
          },
          "required": ["name", "phone", "address", "city"]
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "name": { "type": "string" },
              "price": { "type": "number" },
              "quantity": { "type": "number" },
              "sellerId": { "type": "string" }
            },
            "required": ["productId", "name", "price", "quantity", "sellerId"]
          }
        }
      },
      "required": ["id", "userId", "createdAt", "totalAmount", "status", "shippingAddress", "items"]
    },
    "AffiliatePayment": {
      "title": "Affiliate Payment",
      "description": "Represents a single payment request or history for an affiliate.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique ID for the payment."
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "Date of the payment request."
        },
        "amount": {
          "type": "number",
          "description": "Payment amount."
        },
        "status": {
          "type": "string",
          "enum": ["Pagado", "Pendiente", "Procesando", "Rechazado"]
        },
        "method": {
          "type": "string",
          "description": "Payment method (e.g., Bank Transfer)."
        }
      },
      "required": ["id", "date", "amount", "status"]
    },
    "Affiliate": {
      "title": "Affiliate",
      "description": "Represents an affiliate user and their performance.",
      "type": "object",
      "properties": {
        "user": {
          "$ref": "#/entities/UserProfile"
        },
        "affiliateCode": {
          "type": "string"
        },
        "totalEarnings": {
          "type": "number"
        },
        "pendingBalance": {
          "type": "number"
        },
        "paymentHistory": {
          "type": "array",
          "items": {
            "$ref": "#/entities/AffiliatePayment"
          }
        }
      },
      "required": ["user", "affiliateCode"]
    },
    "Banner": {
      "title": "Banner",
      "description": "Represents a promotional banner for the homepage.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "alt": { "type": "string" },
        "src": { "type": "string", "format": "uri" },
        "link": { "type": "string" },
        "status": { "type": "string", "enum": ["Activo", "Inactivo"] }
      },
      "required": ["alt", "src", "status"]
    },
    "PlatformSettings": {
        "title": "Platform Settings",
        "description": "Stores global configuration for the platform, like commissions.",
        "type": "object",
        "properties": {
            "directSaleCommission": { "type": "number" },
            "auctionSellerCommission": { "type": "number" },
            "auctionBuyerCommission": { "type": "number" },
            "affiliateShare": { "type": "number" }
        },
        "required": ["directSaleCommission", "auctionSellerCommission", "auctionBuyerCommission", "affiliateShare"]
    },
    "AffiliateEvent": {
      "title": "Affiliate Event",
      "description": "Represents a single tracking event for an affiliate link.",
      "type": "object",
      "properties": {
        "affiliateId": { "type": "string", "description": "The UID of the affiliate." },
        "campaign": { "type": "string", "description": "The campaign tag, if any." },
        "type": { "type": "string", "enum": ["click", "conversion"] },
        "timestamp": { "type": "string", "format": "date-time" },
        "earnings": { "type": "number", "description": "Earnings generated from this event (only for conversions)." }
      },
      "required": ["affiliateId", "type", "timestamp"]
    },
    "SubscriptionTier": {
      "title": "Subscription Tier",
      "description": "Defines a subscription plan for users, typically for auction bidding.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string", "enum": ["Gratis", "Bronce", "Plata", "Oro"] },
        "price": { "type": "number" },
        "maxBidding": { "type": "number", "description": "Maximum bidding amount allowed. Use a very large number for infinity." },
        "features": { "type": "array", "items": { "type": "string" } },
        "order": { "type": "number", "description": "The display order of the tier." }
      },
      "required": ["name", "price", "maxBidding", "features", "order"]
    },
    "Category": {
      "title": "Product Category",
      "description": "Defines a product category.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "icon": { "type": "string", "description": "Lucide-react icon name" }
      },
      "required": ["name"]
    },
    "Location": {
      "title": "Location",
      "description": "Defines a geographical location, which can be hierarchical.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "parentId": { "type": "string", "description": "ID of the parent location (e.g., a department for a city). Null for top-level locations." },
        "level": { "type": "number", "description": "0 for departments, 1 for cities/sub-locations" }
      },
      "required": ["name", "level"]
    }
  },
  "auth": {
    "providers": ["anonymous", "google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user."
    },
    "/products/{productId}": {
      "schema": {
        "$ref": "#/entities/Product"
      },
      "description": "Stores all products available on the platform."
    },
    "/orders/{orderId}": {
      "schema": {
        "$ref": "#/entities/Order"
      },
      "description": "Stores all customer orders."
    },
    "/affiliates/{affiliateId}": {
      "schema": {
        "$ref": "#/entities/Affiliate"
      },
      "description": "Stores data for each affiliate user."
    },
    "/banners/{bannerId}": {
        "schema": { "$ref": "#/entities/Banner" },
        "description": "Stores promotional banners for the homepage."
    },
    "/config/platform": {
        "schema": { "$ref": "#/entities/PlatformSettings" },
        "description": "A single document to store global platform settings."
    },
    "/affiliateEvents/{eventId}": {
      "schema": { "$ref": "#/entities/AffiliateEvent" },
      "description": "Stores tracking events for affiliate links (clicks, conversions)."
    },
    "/subscriptionTiers/{tierId}": {
        "schema": { "$ref": "#/entities/SubscriptionTier" },
        "description": "Stores the available subscription plans for users."
    },
    "/categories/{categoryId}": {
      "schema": { "$ref": "#/entities/Category" },
      "description": "Stores all product categories, manageable by admins."
    },
    "/locations/{locationId}": {
        "schema": { "$ref": "#/entities/Location" },
        "description": "Stores geographical locations like departments and cities/sub-locations."
    }
  }
}

    