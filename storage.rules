rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /products/{allPaths=**} {
      // Cualquier usuario puede leer las im√°genes de los productos.
      allow read: if true;
      // Solo los usuarios autenticados pueden escribir (subir, actualizar, borrar).
      allow write: if request.auth != null;
    }
  }
}
