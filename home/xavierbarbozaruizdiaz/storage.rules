rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Las imágenes de los productos son públicas para leer
    // pero solo usuarios autenticados pueden escribir (subir, borrar, modificar).
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
